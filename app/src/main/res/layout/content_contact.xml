<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools">

    <data>

        <variable
            name="contactDetailVM"
            type="com.ryandzhunter.contact.contactdetail.ContactDetailViewModel" />

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/contact_list_layout_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp">

                    <ImageButton
                        android:id="@+id/detail_contact_call"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="26dp"
                        android:backgroundTint="@android:color/transparent"
                        android:onClick="@{()->contactDetailVM.onPhoneClick()}"
                        android:src="@drawable/ic_call_blue" />

                    <LinearLayout
                        android:id="@+id/detail_contact_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="26dp"
                        android:layout_toRightOf="@+id/detail_contact_call"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="@{()->contactDetailVM.onPhoneNumberClick()}"
                            android:text="@={contactDetailVM.mPhoneNumber}"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            tool:text="+91 999999999" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Mobile"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="27dp"
                        android:backgroundTint="@android:color/transparent"
                        android:onClick="@{()->contactDetailVM.onMessageClick()}"
                        android:src="@drawable/ic_message" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/detail_contact_content"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@+id/detail_contact_call"
                        android:background="#E0E0E0" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="20dp">

                    <ImageButton
                        android:id="@+id/detail_contact_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:backgroundTint="@android:color/transparent"
                        android:onClick="@{()->contactDetailVM.onIconEmailClick()}"
                        android:src="@drawable/ic_email_blue" />

                    <LinearLayout
                        android:id="@+id/detail_content_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_toRightOf="@+id/detail_contact_email"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:longClickable="true"
                            android:onClick="@{()->contactDetailVM.onEmailClick()}"
                            android:text="@={contactDetailVM.mEmail}"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            tool:text="betty_allen@gmail.com" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Home"
                            android:textSize="14sp" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>

</layout>